{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Trend of Total Forest Area Burnt",
    "color": "#D9534F",
    "fontSize": 24,
    "font": "sans-serif"
  },
  "width": 600,
  "height": 400,
  "data": {
    "url": "https://gist.githubusercontent.com/qhoa0005/a0d21324842170e5a3a4b61c863300d2/raw/f459e6e01dfdda041f19bfd3b64c7a76f075f423/total_forest_area_burnt_2011_2021.csv"
  },
  "layer": [
    {
      "mark": {
        "type": "line",
        "point": false,
        "color": "#FF6B35",
        "strokeWidth": 3
      },
      "encoding": {
        "x": {
          "field": "Year",
          "type": "ordinal",
          "title": "Year",
          "axis": {
            "labelAngle": 0,
            "labelFontSize": 11,
            "titleFontSize": 12
          }
        },
        "y": {
          "field": "Total_Burnt_kha",
          "type": "quantitative",
          "title": "Area Burnt (kha)",
          "axis": {
            "labelFontSize": 11,
            "titleFontSize": 12,
            "titleAngle": 0,
            "titleAlign": "center",
            "titleY": -10,
            "titleX": -40
          },
          "scale": {
            "domain": [0, 30000]
          }
        }
      }
    },
    {
      "mark": {
        "type": "point",
        "filled": true,
        "size": 80,
        "color": "#FF6B35"
      },
      "encoding": {
        "x": {
          "field": "Year",
          "type": "ordinal"
        },
        "y": {
          "field": "Total_Burnt_kha",
          "type": "quantitative"
        }
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "center",
        "baseline": "bottom",
        "dy": -8,
        "fontSize": 10,
        "color": "#333333"
      },
      "encoding": {
        "x": {
          "field": "Year",
          "type": "ordinal"
        },
        "y": {
          "field": "Total_Burnt_kha",
          "type": "quantitative"
        },
        "text": {
          "field": "Total_Burnt_kha",
          "type": "quantitative",
          "format": ","
        }
      }
    },
    {
      "transform": [
        {
          "regression": "Total_Burnt_kha",
          "on": "Year",
          "method": "linear"
        }
      ],
      "mark": {
        "type": "line",
        "strokeDash": [5, 5],
        "color": "#999999",
        "strokeWidth": 2
      },
      "encoding": {
        "x": {
          "field": "Year",
          "type": "ordinal"
        },
        "y": {
          "field": "Total_Burnt_kha",
          "type": "quantitative"
        }
      }
    }
  ],
  "config": {
    "view": {
      "strokeWidth": 0
    },
    "axis": {
      "grid": true,
      "gridColor": "#E0E0E0"
    }
  }
}