{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Forest Area Burnt by Forest Type (2016â€“2021)",
  "width": 400,
  "height": 400,
  "data": {
    "url": "https://gist.githubusercontent.com/qhoa0005/c339cd20c3dd900933c4340a9586d38a/raw/c19ee03ede34f58c57a469320cef95b83545a3e6/forest_area_burnt_by_forest_type_2016_2021.csv"
  },
  "transform": [
    { "filter": "datum.Jurisdiction == jurisdiction_select" },
    { "filter": "datum.ForestType != 'Total'" },
    { "filter": "datum.Area_kha > 0" }
  ],
  "params": [
    {
      "name": "jurisdiction_select",
      "value": "Australia",
      "bind": {
        "input": "select",
        "options": ["Australia","ACT","NSW","NT","Qld","SA","Tas","Vic","WA"],
        "name": "Select jurisdiction: "
      }
    }
  ],
  "mark": {
    "type": "arc",
    "innerRadius": 60,
    "outerRadius": 150,
    "stroke": "#ffffff",
    "strokeWidth": 1
  },
  "encoding": {
    "theta": { "field": "Area_kha", "type": "quantitative", "stack": true },
    "color": {
      "field": "ForestType",
      "type": "nominal",
      "title": "Forest Type",
      "scale": {
        "domain": [
          "Leasehold forest",
          "Multiple-use public forest",
          "Nature conservation reserve",
          "Other Crown land",
          "Private forest",
          "Unresolved tenure"
        ],
        "range": [
          "#C25E3A",  
          "#5B7B91",  
          "#B9A066",  
          "#7A8F4E",  
          "#A86328", 
          "#D1B89C"  
        ]
      },
      "legend": {
        "orient": "right",
        "titleLimit": 150,
        "labelLimit": 200,
        "titleFontSize": 12,
        "labelFontSize": 11
      }
    },
    "tooltip": [
      { "field": "Jurisdiction", "type": "nominal", "title": "Jurisdiction" },
      { "field": "ForestType", "type": "nominal", "title": "Forest Type" },
      { "field": "Area_kha", "type": "quantitative", "title": "Area (kilohectares)", "format": ".2f" },
      { "field": "Percent_within_state", "type": "nominal", "title": "Percentage" }
    ]
  },
  "view": { "stroke": null },
  "config": {
    "title": {
      "fontSize": 16,
      "fontWeight": "bold",
      "anchor": "start",
      "color": "#4A3C2A"
    },
    "background": "#ffffff"
  }
}